<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="@dimen/activity_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_padding"
        android:layout_marginRight="@dimen/constrain"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/constrain"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/constrain"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_titleEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/form_email" />

        <EditText
            android:id="@+id/editText_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="LabelFor,TextFields" />

        <TextView
            android:id="@+id/textView_titlePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_top"
            android:text="@string/form_password" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_top"
            android:text="@string/button_login" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
